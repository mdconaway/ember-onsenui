{{#ons-page}}
  {{#ons-toolbar}}
    <div class="center">
      Floating action button
    </div>

    <div class="right">
      {{#ons-toolbar-button click=(action (mut menu.collapsed) false)}}
        {{ons-icon icon="md-menu"}}
      {{/ons-toolbar-button}}
    </div>
  {{/ons-toolbar}}

  <p style="text-align: center;">
    {{#if fabIsVisible}}
      {{#ons-button click=(action (mut fabIsVisible) false)}}
        Hide the fab button
      {{/ons-button}}
    {{else}}
      {{#ons-button click=(action (mut fabIsVisible) true)}}
        Show the fab button
      {{/ons-button}}
    {{/if}}
  </p>

  {{#ons-fab
      position="bottom right"
      visible=fabIsVisible
      click=(action "showSuccessDialog")}}
    {{ons-icon icon="md-plus"}}
  {{/ons-fab}}
{{/ons-page}}
